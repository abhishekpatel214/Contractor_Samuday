<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".dashboard">


    <GridLayout
        android:id="@+id/gridLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginStart="2dp"
        android:layout_marginTop="2dp"
        android:layout_marginEnd="2dp"
        android:layout_marginBottom="2dp"
        android:columnCount="3"

        android:columnOrderPreserved="false"
        android:rowCount="10"
        android:useDefaultMargins="true">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="vertical">

            <!-- Image Button 1 -->
            <ImageButton
                android:id="@+id/button1"
                android:layout_width="111dp"
                android:layout_height="111dp"
                android:background="@drawable/button_background"
                android:contentDescription=""
                android:scaleType="fitCenter"
                android:src="@drawable/contrac" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="ADD Contractor"
                android:textColor="@android:color/black"
                android:textSize="14sp"
                android:textStyle="bold" />

        </LinearLayout>

        <!-- Image Button 2 -->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="vertical">

            <ImageButton
                android:id="@+id/button2"
                android:layout_width="111dp"
                android:layout_height="111dp"
                android:background="@drawable/button_background"
                android:contentDescription="iption"
                android:scaleType="fitCenter"
                android:src="@drawable/worker" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="Add Worker"
                android:textColor="@android:color/black"
                android:textSize="14sp"
                android:textStyle="bold" />

        </LinearLayout>

        <!-- Image Button 3 -->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="vertical">

            <ImageButton
                android:id="@+id/button3"
                android:layout_width="111dp"
                android:layout_height="111dp"
                android:background="@drawable/button_background"
                android:contentDescription="icon3_description"
                android:scaleType="fitCenter"
                android:src="@drawable/construction_site" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="Construction Site"
                android:textColor="@android:color/black"
                android:textSize="14sp"
                android:textStyle="bold" />

        </LinearLayout>

        <!-- Image Button 4 -->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="vertical">

            <ImageButton
                android:id="@+id/button4"
                android:layout_width="111dp"
                android:layout_height="111dp"
                android:background="@drawable/button_background"
                android:contentDescription="_description"
                android:scaleType="fitCenter"
                android:src="@drawable/attandance" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="Attendance"
                android:textColor="@android:color/black"
                android:textSize="14sp"
                android:textStyle="bold" />

        </LinearLayout>

        <!-- Image Button 5 -->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="vertical">

            <ImageButton
                android:id="@+id/button5"
                android:layout_width="111dp"
                android:layout_height="111dp"
                android:background="@drawable/button_background"
                android:contentDescription="con5_description"
                android:scaleType="fitCenter"
                android:src="@drawable/worker_search" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="Worker Search"
                android:textColor="@android:color/black"
                android:textSize="14sp"
                android:textStyle="bold" />

        </LinearLayout>

        <!-- Image Button 6 -->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="vertical">

            <ImageButton
                android:id="@+id/button6"
                android:layout_width="111dp"
                android:layout_height="111dp"
                android:background="@drawable/button_background"
                android:contentDescription="icon6_description"
                android:scaleType="fitCenter"
                android:src="@drawable/payment" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="Payments"
                android:textColor="@android:color/black"
                android:textSize="14sp"
                android:textStyle="bold" />

        </LinearLayout>

    </GridLayout>

</RelativeLayout>
